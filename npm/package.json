{
  "name": "@flowspec/cli",
  "version": "1.0.0",
  "description": "FlowSpec CLI - A powerful tool for ServiceSpec validation and OpenTelemetry trace analysis",
  "main": "lib/binary.js",
  "bin": {
    "flowspec-cli": "bin/flowspec-cli.js"
  },
  "scripts": {
    "postinstall": "node install.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='(platform|download|binary)\\.test\\.js$'",
    "test:integration": "jest --testPathPattern='integration\\.test\\.js$'",
    "test:e2e": "jest --testPathPattern='e2e\\.test\\.js$'",
    "test:mock-server": "jest --testPathPattern='mock-server\\.test\\.js$'",
    "test:error-scenarios": "jest --testPathPattern='error-scenarios\\.test\\.js$'",
    "test:cli-wrapper": "jest --testPathPattern='cli-wrapper\\.test\\.js$'",
    "test:verbose": "jest --verbose",
    "test:ci": "jest --coverage --ci --watchAll=false"
  },
  "keywords": [
    "flowspec",
    "servicespec",
    "opentelemetry",
    "microservices",
    "validation",
    "cli",
    "testing"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/flowspec/flowspec-cli.git",
    "directory": "npm"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=14.0.0"
  },
  "os": ["linux", "darwin", "win32"],
  "cpu": ["x64", "arm64"],
  "files": [
    "bin/",
    "lib/",
    "install.js",
    "README.md"
  ],
  "author": "FlowSpec Team",
  "homepage": "https://github.com/flowspec/flowspec-cli#readme",
  "bugs": {
    "url": "https://github.com/flowspec/flowspec-cli/issues"
  },
  "dependencies": {
    "tar": "^6.2.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "lib/**/*.js",
      "install.js",
      "bin/**/*.js",
      "!lib/**/*.test.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testTimeout": 30000,
    "setupFilesAfterEnv": ["<rootDir>/test/setup.js"]
  }
}